<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainMenu"
    android:background="#ffbf7e5b"
    android:padding="0dp"
    android:id="@+id/lytMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Mind"
        android:id="@+id/txtMastermind"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#ff0400ff"
        android:phoneNumber="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtMastermind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:padding="4dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/btnPlay"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu"
            android:textSize="30dp"
            android:textColor="#ff08007e"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best"
            android:id="@+id/btnBest"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu"
            android:textSize="30dp"
            android:textColor="#ff08007e"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/btnSettings"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_menu"
            android:textSize="30dp"
            android:textColor="#ff08007e"
            />
    </LinearLayout>
</RelativeLayout>
